	try
	{
		CASLogger.debug("Inside vRA Group Approval Send Notification :Business Rule");
		var appUtil= new CASAppUtil();
		var app_scope = gs.getProperty(appUtil.configuration.properties.applicationSysID);
		if (current.parent.cat_item.sys_scope == app_scope) {


			var inc = new GlideRecord('sc_req_item');
			if(inc.get('sys_id',current.parent)){
				if(inc.cat_item.cas_uid !='')
				{
					var group= gs.getProperty(appUtil.configuration.properties.group_notifications);
					if(group=='true')
					{
						gs.eventQueue('x_vmw_cloudservice.approval_group_notify',current,current.assignment_group);	

					}
				}
			}		
		}
	}
	catch(e)
	{
		CASLogger.error("Exception caught inside Send email on Notify when entitle is inserted:Business Rule. "+e);
	}


})(current, previous);]]></script>
