        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
  
	var appUtil = new CASAppUtil();
    

try {
    CASLogger.debug('Inside  Day2 actions notification :Business Rule');
	
    var value = gs.getProperty(appUtil.configuration.properties.vRA_day2_action_completion);
    if (value == 'true') {
        var gr = new GlideRecordSecure(appUtil.configuration.table.users_table);
        gr.addEncodedQuery('user_name=' + current.sys_created_by);
        gr.query();
        if (gr.next()) {
            if (current.u_name != ''&& current.u_name_resource==''){
			
                gs.eventQueue('x_vmw_cloudservice.day2_action_status', current, gr.email);
            } 
			else {
			
                gs.eventQueue('x_vmw_cloudservice.day2_action_resource_', current, gr.email);
            }
        }
    }
} catch (e) {
    
	CASLogger.error("Exception caught Inside Day2 actions notification :Business Rule   " + e);
}
	

	
	
	

})(current, previous);]]></script>
