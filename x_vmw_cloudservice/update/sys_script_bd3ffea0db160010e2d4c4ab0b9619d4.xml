        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	try
	{
		CASLogger.debug("Inside Request Rejection notifications:Business Rule");
		var appUtil= new CASAppUtil();
		var app_scope = gs.getProperty(appUtil.configuration.properties.applicationSysID);
		if (current.sysapproval.cat_item.sys_scope == app_scope) {

			var value= gs.getProperty(appUtil.configuration.properties.request_rejection);

			if(value=='true')
			{
				var gr = new GlideRecordSecure(appUtil.configuration.table.requests);
				gr.addQuery('sys_id',current.document_id);
				gr.query();
				while(gr.next())
				{
					var requested=gr.request.requested_for;

				}
				gs.eventQueue('x_vmw_cloudservice.request_rejected',current,requested);

			}
		}
	}
	catch(e)
	{
		CASLogger.error("Exception caught inside Request Rejection notifications:Business Rule. "+e);
	}


})(current, previous);

]]></script>
