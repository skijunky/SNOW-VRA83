        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	// Add your code here
	var appUtil= new CASAppUtil();

	try
	{
		CASLogger.debug("Inside BR : Resource Sharing Email Notification for Insert & Update");

		var resSharing= gs.getProperty(appUtil.configuration.properties.shared_resource_notifications);

		if(resSharing=='true')
		{
			//getting the Created By User's Email ID.
			var CreatedBy = new GlideRecordSecure(appUtil.configuration.table.users_table);
			CreatedBy.addEncodedQuery('user_name='+current.sys_created_by);
			CreatedBy.query();
			
			if(CreatedBy.next()) var Creator_email = CreatedBy.email;
			
			gs.eventQueue('x_vmw_cloudservice.shared_res_creator_up',current,Creator_email);
		}
	}catch(e)
	{
		CASLogger.error("Exception caught inside BR: Sharing Res Updation Email Notification "+e);
	}

})(current, previous);]]></script>
